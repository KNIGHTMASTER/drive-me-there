<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="@dimen/login_input_control_margin_bottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_splash_screen"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shape="rectangle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/panel_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_input_control_margin_top"
            android:layout_marginLeft="@dimen/login_input_control_margin_left"
            android:layout_marginStart="@dimen/login_input_control_margin_left"
            android:layout_marginRight="@dimen/login_input_control_margin_right"
            android:layout_marginEnd="@dimen/login_input_control_margin_right"
            android:layout_marginBottom="@dimen/login_input_control_margin_bottom"
            android:background="@drawable/custom_edit_text_password"
            android:padding="0dp"
            android:gravity="center_vertical" >

            <id.co.zisal.dmt_component.ui.font.MaterialDesignIconsTextView
                android:id="@+id/icon_email"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_input_control_icon_margin_top"
                android:padding="0dp"
                android:text="@string/material_icon_email"
                android:textColor="@color/main_color_grey_300"
                android:textSize="18dp" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletTextAppearance="@style/floatlabelededittext"
                float:fletPadding="0dp">
                <EditText
                    android:id="@+id/txt_email"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:singleLine="true"
                    android:textSize="12sp"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_input_control_margin_left"
            android:layout_marginStart="@dimen/login_input_control_margin_left"
            android:layout_marginRight="@dimen/login_input_control_margin_right"
            android:layout_marginEnd="@dimen/login_input_control_margin_right"
            android:layout_marginBottom="@dimen/login_input_control_flat_padding"
            android:background="@drawable/custom_edit_text_password"
            android:gravity="center_vertical" >

            <id.co.zisal.dmt_component.ui.font.MaterialDesignIconsTextView
                android:id="@+id/icon_password"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_input_control_icon_margin_top"
                android:padding="0dp"
                android:text="@string/material_icon_password"
                android:textColor="@color/main_color_grey_300"
                android:textSize="18dp" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletTextAppearance="@style/floatlabelededittext"
                float:fletPadding="0dp">
                <EditText
                    android:id="@+id/txt_password"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:singleLine="true"
                    android:textSize="12sp"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <CheckBox
            android:id="@+id/chkShowPassword"
            android:layout_marginLeft="@dimen/login_input_control_margin_left"
            android:layout_marginRight="@dimen/login_input_control_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:buttonTint="@color/primary_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/login_input_control_flat_padding"
            android:text="@string/show_password"/>

        <Button
            android:layout_marginLeft="@dimen/login_input_control_margin_left"
            android:layout_marginStart="@dimen/login_input_control_margin_left"
            android:layout_marginRight="@dimen/login_input_control_margin_right"
            android:layout_marginEnd="@dimen/login_input_control_margin_right"
            android:layout_marginBottom="@dimen/login_input_control_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_control_height"
            android:background="@drawable/custom_edit_text_password"
            android:id="@+id/btLogin"
            android:textColor="@android:color/white"
            android:text="@string/sign_in"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginRight="@dimen/login_input_control_margin_right"
            android:layout_marginBottom="@dimen/login_input_control_margin_bottom"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/sign_up"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_about"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/lblLearnAbout"
            />
    </RelativeLayout>

</LinearLayout>
